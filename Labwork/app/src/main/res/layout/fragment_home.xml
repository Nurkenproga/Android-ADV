<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:padding="20dp"
    android:background="@color/white">

    <Button
        android:id="@+id/button_task1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        android:paddingVertical="12dp"
        android:text="Upload to Story"
        android:background="@drawable/rounded_button"
        android:textColor="@color/white"
        android:elevation="6dp" />

    <Button
        android:id="@+id/button_task2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        android:paddingVertical="12dp"
        android:text="Background Audio"
        android:background="@drawable/rounded_button"
        android:textColor="@color/white"
        android:elevation="6dp" />

    <Button
        android:id="@+id/button_task3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        android:paddingVertical="12dp"
        android:text="Device Signals"
        android:background="@drawable/rounded_button"
        android:textColor="@color/white"
        android:elevation="6dp" />

    <Button
        android:id="@+id/button_task4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingVertical="12dp"
        android:text="Sync with Calendar"
        android:background="@drawable/rounded_button"
        android:textColor="@color/white"
        android:elevation="6dp" />

</LinearLayout>
